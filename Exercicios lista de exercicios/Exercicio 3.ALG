algoritmo "Exercicio 3"
var   nome, mes : caractere
salario : real

inicio
      escreval("Nome do funcionario : ")
      leia(nome)
      escreval("Salario do funcionario :  ")
      leia(salario)
      escreval ("Mes do salario : ")
      leia(mes)
      escreval("O salario do funcionario, ",nome," no mes de " ,mes, " foi de : ", salario)
fimalgoritmo